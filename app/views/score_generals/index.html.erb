<%= render 'template/menu' %>
<h1>Lista de notas gerais</h1>

<div class="table">
  <div class="rowHeader">
    <div class="row">
      <div class="column column-2"></div>
      <div class="column column-2">Enade</div>
      <div class="column column-2">Instituição</div>
      <div class="column column-2">Nota</div>
      <th colspan="3"></th>
    </div>
  </div>

  <tbody>
    <% @score_generals.each do |score_general| %>
      <div class="row">
        <div class="column column-2"></div>
        <div class="column column-2"><%= score_general.enade.year %></div>
        <div class="column column-2"><%= score_general.institution.name %></div>
        <div class="column column-2"><%= score_general.score %></div>
        <div class="column column-1"><%= link_to 'Edit', edit_score_general_path(score_general) %></div>
        <div class="column column-1"><%= link_to 'Destroy', score_general, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  </tbody>
</div>

<br>

<%= link_to 'Novo', new_score_general_path %>
