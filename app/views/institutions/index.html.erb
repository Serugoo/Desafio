<%= render 'template/menu' %>
<h1>Lista de instituições</h1>

<div class="table">
  <div class="rowHeader">
    <div class="row">
      <div class="column column-2"></div>
      <div class="column column-2">Nome</div>
      <th colspan="3"></th>
    </div>
  </div>

  <tbody>
    <% @institutions.each do |institution| %>
       <div class="row">
        <div class="column column-2"></div>
        <div class="column column-2"><%= institution.name %></div>
        <div class="column column-1"><%= link_to 'Edit', edit_institution_path(institution) %></div>
        <div class="column column-1"><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  </tbody>
</div>

<br>

<%= link_to 'Novo', new_institution_path %>
