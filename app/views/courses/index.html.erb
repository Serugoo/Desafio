<%= render 'template/menu' %>
<h1>Lista de cursos</h1>

<div class="table">
  <div class="rowHeader">
    <div class="row">
      <div class="column column-2"></div>
      <div class="column column-2">Nome</div>
      <div class="column column-2">Instituição</div>
      <th colspan="3"></th>
    </div>
  </div>

  <tbody>
    <% @courses.each do |course| %>
      <div class="row">
        <div class="column column-2"></div>
        <div class="column column-2"><%= course.name %></div>
        <div class="column column-2"><%= course.institution.name %></div>
        <div class="column column-1"><%= link_to 'Edit', edit_course_path(course) %></div>
        <div class="column column-1"><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  </tbody>
</div>

<br>

<%= link_to 'Novo', new_course_path %>
