<%= render 'template/menu' %>
<h1>Lista de notas de cursos</h1>

<div class="table">
  <div class="rowHeader">
    <div class="row">
      <div class="column column-2"></div>
      <div class="column column-2">Enade</div>
      <div class="column column-2">Instituição</div>
      <div class="column column-2">Curso</div>
      <div class="column column-2">Nota</div>
      <th colspan="3"></th>
    </div>
  </div>

  <tbody>
    <% @score_courses.each do |score_course| %>
      <div class="row">
        <div class="column column-2"></div>
        <div class="column column-2"><%= score_course.enade.year %></div>
        <div class="column column-2"><%= score_course.course.institution.name %></div>
        <div class="column column-2"><%= score_course.course.name %></div>
        <div class="column column-2"><%= score_course.score %></div>
        <div class="column column-1"><%= link_to 'Edit', edit_score_course_path(score_course) %></div>
        <div class="column column-1"><%= link_to 'Destroy', score_course, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  </tbody>
</div>

<br>

<%= link_to 'Novo', new_score_course_path %>
