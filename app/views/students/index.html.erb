<%= render 'template/menu' %>
<h1>Lista de estudantes</h1>

<div class="table">
  <div class="rowHeader">
    <div class="row">
      <div class="column column-2"></div>
      <div class="column column-2">Nome</div>
      <div class="column column-2">Curso</div>
      <div class="column column-2">Instituição</div>
      <th colspan="3"></th>
    </div>
  </div>

  <tbody>
    <% @students.each do |student| %>
      <div class="row">
        <div class="column column-2"></div>
        <div class="column column-2"><%= student.name %></div>
        <div class="column column-2"><%= student.course.name %></div>
        <div class="column column-2"><%= student.course.institution.name %></div>
        <div class="column column-1"><%= link_to 'Edit', edit_student_path(student) %></div>
        <div class="column column-1"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo', new_student_path %>
